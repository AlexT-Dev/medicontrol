<%- include ('../partials/_header') %>
    <p class="headerPCat">
        <%= title %>
    </p>
    </div>
    <div class="divForm">
        <div class="divFormBuscar">

        </div>
        <div class="divHeaderOp">
            <!-- Opciones de encabezados -->
            <a href="/assistant" class="btnRegresar">Regresar</a>
        </div>
    </div>
    <div class="divcerrar-sesion">
        <!-- Datos del usuario que tuvo acceso -->
        <input type="hidden" name="usuario" value="" disabled>

        <img src="../../Espacialidades.png" height="20" width="20">
        <% if (userAccess) { %>
            <p>
                <%= userAccess %>
            </p>
            <a href="/login" class="btncerrar-sesion">Cerrar Sesi√≥n</a>
    </div>
    </div>
    </header>
    <div class="divFormContainer">
        <div class="divFormCaptura" style="height: 230px; width: 400px;">
            <form action="/updateDate/<%= data.idpadactual %>" method="POST">
                
                    <div class="divDatosCaptura">
                        <label class="labelFormCaptura">Doctor:</label>
                        <!-- Conecta a la base de datos para traer Pacientes -->
                        <select class="selectCaptura" name="cuenta" >
                            <option value="<%= data.cuenta %>"><%= data.nombreusuario %></option>
                            <!-- Inicia el listado de los registros -->
                          
                        </select>
                    </div>
                    <div class="divDatosCaptura">
                    <label class="labelFormCaptura">Paciente:</label>
                    <!-- Conecta a la base de datos para traer Pacientes -->
                    <select class="selectCaptura" name="idpaciente" disabled>
                        <option value="<%= data.idpaciente %>"><%= data.nombrepaciente %></option>
                        <!-- Inicia el listado de los registros -->
                       
                    </select>
                </div>
                <div class="divDatosCaptura">
                    <label class="labelFormCaptura">Fecha:</label>
                    <input type="date" rows="3" name="fechacita" class="selectCaptura" value="<%= data.fechacita %>" required>
                </div>
                <div class="divDatosCaptura">
                    <label class="labelFormCaptura">Hora:</label>
                    <!-- Solicita la hora-->
                    <select class="selectCaptura" name="horacita" required>
                        <option value="<%= data.horacita %>"><%= data.horacita %></option>
                        <option value="04:00">04:00</option>
                        <option value="05:00">05:00</option>
                        <option value="06:00">06:00</option>
                        <option value="07:00">07:00</option>
                        <option value="08:00">08:00</option>
                    </select>
                </div>
                <div class="divDatosCaptura">
                    <label class="labelFormCaptura">Visita:</label>
                    <!-- Solicita la hora-->
                    <select class="selectCaptura" name="status" required>
                        <option value="<%= data.status %>"><%= data.status %></option>
                        <option value="CANCELADA">CANCELADA</option>
                        <option value="PRIMERA VEZ">PRIMERA VEZ</option>
                        <option value="SUBSECUENTE">SUBSECUENTE</option>
                    </select>
                </div>
                <hr color="blue" size=3>
                <div class="divFormOp">

                    <input type="submit" value="Guardar" class="btnGuardar">

                </div>
                <% if (message) { %>
                    <div class="containerModal" >
                      <div class="popup" id="modal">
                          <div>
                              <p class="textModal">
                                  <%= title %>
                              </p>
                              <hr class="hrModal">
                              </hr>
                          </div>
                          <div>
                              <p class="textModal">
                                  <%= message %>
                              </p>
                          </div>
                          <div>
                              <a href="<%= data.idpadactual %>" class="btncloseModal" rel="noreferrer">
                                  Cerrar
                              </a>
                          </div>
                      </div>
                  </div>
                <% message = ""} %>
            </form>

        </div>
    </div>

    <% } else { %>
        <div class="containerModal">
            <div class="popup" id="modal">
                <div>
                    <p class="textModal">USUARIO SIN ACCESSO</p>
                    <hr class="hrModal">
                    </hr>
                </div>
                <div>
                    <p class="textModal">No se ha registrado con su cuenta.</p>
                </div>
                <div>
                    <a href="/login" class="btncloseModal" rel="noreferrer">
                        Cerrar
                    </a>
                </div>
            </div>
        </div>
        <% } %>

            <%- include ('../partials/_footer') %>