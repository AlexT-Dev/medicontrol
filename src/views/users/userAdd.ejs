    <div class="divFormContainer">
        <div class="divFormCaptura" style="width: 600px;">
            <!-- /add es la ruta que guarda la información capturada -->
            <form action="add" method="POST"> 
                <div class="divDatosCaptura">
                    <div class="labelFormCaptura"><label>Nombre:</label></div>
                    <div><input class="inputFormCaptura" type="text" rows="3" style="text-transform:uppercase;" name="nombreusuario" size="35"></div>
                </div>
                <div class="divDatosCaptura">
                    <div class="labelFormCaptura"><label>Tipo:</label></div>
                    <div>
                        <select name="tipousuario" class="selectCaptura">
                            <option value="nada">Elija un Tipo</option>
                            <option value="ADMINISTRADOR">ADMINISTRADOR</option>
                            <option value="AUXILIAR">AUXILIAR</option>
                            <option value="DOCTOR">DOCTOR</option>
                        </select>
                    </div>
                </div>
                <div class="divDatosCaptura">
                    <label class="labelFormCaptura">Status:</label>
                    <select name="status" class="selectCaptura">
                        <option value="nada">Elija una status</option>
                        <option value="ACTIVO">ACTIVO</option>
                        <option value="INACTIVO">INACTIVO</option>
                    </select>
                </div>
                <div class="divDatosCaptura">
                    <label for="floatingTextarea" class="labelFormCaptura">Cuenta:</label>
                    <div><input class="inputFormCaptura" type="text" rows="3" name="cuenta" size="50"></div>
                </div>
                <div class="divDatosCaptura">
                    <label for="floatingTextarea" class="labelFormCaptura">Contraseña:</label>
                    <div><input class="inputFormCaptura" type="password" rows="3" name="password" size="50"></div>
                </div>
                <div class="divOpciones">
                    <input type="submit" value="Guardar" class="btnGuardar" value="">
                    <a class="btnRegresar" href="users">Regresar</a>
                </div>
            </form>
        </div>
    </div>

