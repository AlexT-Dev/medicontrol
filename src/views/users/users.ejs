<%- include ('../partials/_header') %>
    <p class="headerPCat">Cat. Usuarios</p>
    
    </div>
    <div class="divForm">
        <div class="divFormBuscar">
          <form action="find" method="post">
                <input type="text" name="nombre" placeholder="Nombre del usuario" size="58"
                    style="text-transform:uppercase; font-size:80%;" class="inputForm">
                <span title="Clic sin nombre para traer todos los usuarios.">
                    <input class="btnBuscar" type="submit" value="Buscar">
                   
                </span>
            </form>
        </div>
        <div class="divHeaderOp">
            <!-- Opciones de encabezados -->
            <span title="Crear nuevo usuario.">
                <a class="btnNuevo" href="new">Nuevo</a>
            </span>
            <a class="btnRegresar" href="ServiciosBD.htm">Regresar</a>
        </div>
    </div>
    <div class="divcerrar-sesion">
        <!-- Datos del usuario que tuvo acceso -->
        <input type="hidden" name="usuario" value="" disabled>

        <img src="../../Espacialidades.png" height="20" width="20">
        <p>#</p>
        <a href="/login" class="btncerrar-sesion">Cerrar Sesión</a>

    </div>
    </div>
    </header>
    <section class="seccion">
        <div class="fijar-tabla" style="max-width: 70%;">
            <table id= "users" class="tabla">
                <thead class="tHead">
                    <tr class="trFija">
                        <th style="width:300px; text-align: center">CUENTA</th>
                        <th style="width:200px; text-align: center">NOMBRE</th>
                        <th style="width:150px; text-align: center">TIPO</th>
                        <th style="width:150px; text-align: center">STATUS</th>
                        <th style="width:160px; text-align: center">OPCIONES</th>
                    </tr>
                </thead>
                <tbody class="tbodyDatos" style="height: 500px;">
                    <!-- Inicia el listado de los registros -->
                    <% if (data) { %>
                        <% for (var i=0; i < data.length; i++) {%>
                            <tr class="trDatos">
                                <td style="width:300px; font-size:90%; text-align: left"><%= data[i].cuenta %></td>
                                <td style="width:200px; font-size:90%; text-align: justify;"><%= data[i].nombreusuario %></td>
                                <td style="width:150px; font-size:90%; text-align: justify;"><%= data[i].tipousuario %></td>
                                <td style="width:150px; font-size:90%; text-align: center;"><%= data[i].status %></td>
                                <td style="width:160px; font-size:80%;">
                                    <a href="update/<%= data[i].cuenta %>" class="btnModificar"> Modificar </a>
                                    <a href="delete/<%= data[i].cuenta %>" onclick="return confirm('¿Desea poner inactivo?')" class="btnBorrar"> Inactivo </a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>

                </tbody>
            </table>
        </div>
    </section>
    

    <%- include ('../partials/_footer') %>